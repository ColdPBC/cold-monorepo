{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "cold-production",
      "name": "production",
      "region": "us-east-1",
      "source": {
        "pr": false,
        "branch": "main",
        "trigger": "push"
      },
      "services": [
        {
          "id": "cold-rds-fc-production",
          "name": "cold-rds-fc-production",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceSize": "db.t4g.large",
          "storage": 200,
          "maxStorage": 400,
          "private": false,
          "deletionProtection": true,
          "applyChangesImmediately": true,
          "autoUpgradeMinorVersions": true,
          "connectionStringEnvVarName": "DATABASE_URL"
        },
        {
          "id": "cold-api-fc-production",
          "cpu": 1,
          "name": "cold-api-fc",
          "port": 7001,
          "type": "fargate",
          "memory": 2,
          "basePath": ".",
          "buildType": "fromRepository",
          "containerImage": {
            "registryId": "cold-ecr-fc-r123elz",
            "repository": "api-docker-images",
            "tag": "main"
          },
          "domain": "api.coldclimate.com",
          "watchPaths": [
            "apps/cold-api/src/**",
            "apps/cold-api/prisma/**",
            "apps/cold-api/test/**",
            "api.flightcontrol.json",
            "Dockerfile"
          ],
          "sidecars": [
            {
              "name": "cold-datadog-fc-production",
              "image": "datadog/agent",
              "cpuAllotment": 0.5,
              "memoryAllotment": 0.25,
              "enableNetworking": true,
              "logging": true,
              "ports": [8125, 5001, 5000],
              "envVariables": {
                "DD_ENV": "production",
                "DD_AGENT_MAJOR_VERSION": "7",
                "DD_LOG_LEVEL": "ERROR",
                "DD_API_KEY": {
                  "fromParameterStore": "fc.cold-api-fc.env.cold-production.8pr1zak.DD_API_KEY"
                },
                "DD_POSTGRES_URL_VAR": "DATABASE_URL",
                "DD_REDIS_URL_VAR": "REDISCLOUD_URL",
                "DD_SERVICE": "cold-api-fc",
                "DD_SITE": "us5.datadoghq.com",
                "DD_APM_ENABLED": true,
                "DD_APPSEC_AUTOMATED_USER_EVENTS_TRACKING": true,
                "DD_APPSEC_ENABLED": true,
                "DD_DOGSTATSD_NON_LOCAL_TRAFFIC": true,
                "DD_DYNO_HOST": true,
                "DD_ENABLE_DBM": true,
                "DD_LOGS_INJECTION": true,
                "DD_IAST_ENABLED": true,
                "DD_PROCESS_AGENT": true,
                "DD_PROFILING_ENABLED": true,
                "DD_REMOTE_CONFIGURATION_ENABLED": true
              }
            }
          ],
          "autoscaling": {
            "cpuThreshold": 70,
            "memoryThreshold": 70,
            "cooldownTimerSecs": 300,
            "requestsPerTarget": 500
          },
          "experimental": {
            "healthCheckTimeout": 15,
            "healthCheckInterval": 35
          },
          "envVariables": {
            "REDISCLOUD_URL": {
              "fromService": {
                "id": "cold-cache-fc-production",
                "value": "connectionString"
              }
            },
            "DATABASE_URL": {
              "fromService": {
                "id": "cold-rds-fc-production",
                "value": "dbConnectionString"
              }
            },
            "API_SERVER_DESCRIPTION": "Production Server",
            "API_SERVER_URL": "https://api.coldclimate.com",
            "AUTH0_AUDIENCE": "https://api.coldclimate.com/",
            "AUTH0_DOMAIN": "cold-climate-production.us.auth0.com",
            "NODE_ENV": "production",
            "DD_ENV": "production",
            "ENABLE_HEALTH_LOGS": false,
            "DD_AGENT_MAJOR_VERSION": "7",
            "DD_LOG_LEVEL": "ERROR",
            "DD_POSTGRES_URL_VAR": "DATABASE_URL",
            "DD_REDIS_URL_VAR": "REDISCLOUD_URL",
            "DD_SERVICE": "cold-api-fc",
            "DD_SITE": "us5.datadoghq.com",
            "DD_APM_ENABLED": true,
            "DD_APPSEC_AUTOMATED_USER_EVENTS_TRACKING": true,
            "DD_APPSEC_ENABLED": true,
            "DD_DOGSTATSD_NON_LOCAL_TRAFFIC": true,
            "DD_DYNO_HOST": true,
            "DD_ENABLE_DBM": true,
            "DD_LOGS_INJECTION": true,
            "DD_IAST_ENABLED": true,
            "DD_PROCESS_AGENT": true,
            "DD_PROFILING_ENABLED": true,
            "DD_REMOTE_CONFIGURATION_ENABLED": true
          },
          "maxInstances": 4,
          "minInstances": 2,
          "healthCheckPath": "/health",
          "containerInsights": false,
          "enableCloudfrontSwr": false,
          "versionHistoryCount": 10
        },
        {
          "id": "cold-cache-fc-production",
          "name": "cold-cache-fc-production",
          "port": 6379,
          "type": "elasticache",
          "engine": "redis",
          "clusterMode": false,
          "instanceSize": "cache.t3.micro",
          "engineVersion": "7.0",
          "encryptionAtRest": true,
          "numberOfReplicas": 1,
          "applyChangesImmediately": true,
          "autoMinorVersionUpgrade": true,
          "connectionStringEnvVarName": "REDISCLOUD_URL"
        }
      ],
      "envVariables": {
        "API_SERVER_DESCRIPTION": "Production Server",
        "API_SERVER_URL": "https://api.coldclimate.com",
        "AUTH0_AUDIENCE": "https://api.coldclimate.com/",
        "AUTH0_DOMAIN": "cold-climate-production.us.auth0.com",
        "NODE_ENV": "production",
        "DD_ENV": "production",
        "DD_AGENT_MAJOR_VERSION": "7",
        "DD_LOG_LEVEL": "ERROR",
        "DD_POSTGRES_URL_VAR": "DATABASE_URL",
        "DD_REDIS_URL_VAR": "REDISCLOUD_URL",
        "DD_SERVICE": "cold-api-fc",
        "DD_SITE": "us5.datadoghq.com",
        "DD_APM_ENABLED": "true",
        "DD_APPSEC_AUTOMATED_USER_EVENTS_TRACKING": "true",
        "DD_APPSEC_ENABLED": "true",
        "DD_DOGSTATSD_NON_LOCAL_TRAFFIC": "true",
        "DD_DYNO_HOST": "true",
        "DD_ENABLE_DBM": "true",
        "DD_LOGS_INJECTION": "true",
        "DD_IAST_ENABLED": "true",
        "DD_PROCESS_AGENT": "true",
        "DD_PROFILING_ENABLED": "true",
        "DD_REMOTE_CONFIGURATION_ENABLED": "true"
      }
    },

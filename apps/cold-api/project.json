{
  "name": "cold-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cold-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/cold-api",
        "main": "apps/cold-api/src/main.ts",
        "tsConfig": "apps/cold-api/tsconfig.app.json",
        "assets": [
          "apps/cold-api/src/assets"
        ],
        "webpackConfig": "apps/cold-api/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "staging": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "args": ["--trace-warnings"],
        "buildTarget": "cold-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "cold-api:build:development",
          "runtimeArgs": ["--trace-warnings"],
	       "runBuildTargetDependencies": true,
	       "buildTargetOptions": {
						"watch": true
					},
          "port": 9001
        },
        "staging": {
          "buildTarget": "cold-api:build:staging",
          "runtimeArgs": ["--trace-warnings"],
          "port": 9001
        },
        "production": {
          "buildTarget": "cold-api:build:production",
          "runtimeArgs": ["--trace-warnings"],
          "port": 9001
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/cold-api/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/cold-api/jest.config.ts"
      }
    }
  },
  "tags": []
}

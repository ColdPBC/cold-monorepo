{
  "name": "cold-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cold-ui/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "postcssConfig": "apps/cold-ui/postcss.config.js",
        "outputPath": "dist/apps/cold-ui"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "cold-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "cold-ui:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "cold-ui:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "cold-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "cold-ui:build:development"
        },
        "production": {
          "buildTarget": "cold-ui:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/cold-ui"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc -p tsconfig.app.json --noEmit"
        ],
        "cwd": "apps/cold-ui",
        "forwardAllArgs": false
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/cold-ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "cold-ui:build"
      }
    }
  },
  "tags": []
}

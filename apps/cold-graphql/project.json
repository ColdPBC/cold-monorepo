{
  "name": "cold-graphql",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cold-graphql/src/backend",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@coldpbc/graphweaver:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
	      "application": "all",
        "platform": "node",
        "outputPath": "apps/cold-graphql/dist",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/cold-graphql/src/backend/index.ts",
        "tsConfig": "apps/cold-graphql/tsconfig.app.json",
        "assets": ["apps/cold-graphql/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {
	        "options": {
		        "application": "all"
	        }
        },
        "production": {
	        "options": {
		        "application": "backend"
	        },
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@coldpbc/graphweaver:serve",
      "defaultConfiguration": "development",
      "options": {
	      "action": "start"
      },
      "configurations": {
        "development": {
	        "options": {
		        "application": "all"
	        },
          "buildTarget": "cold-graphql:build:development"
        },
        "production": {
	        "options": {
		        "application": "backend"
	        },
          "buildTarget": "cold-graphql:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/cold-graphql/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/cold-graphql/jest.config.ts"
      }
    }
  },
  "tags": []
}

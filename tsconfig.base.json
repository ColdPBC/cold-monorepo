      "@coldpbc/mocks": ["./libs/react/src/__mocks__/index.ts"],
      "@coldpbc/providers": ["./libs/react/src/providers/index.ts"],
      "@coldpbc/routes": ["./libs/react/src/routes/index.ts"],

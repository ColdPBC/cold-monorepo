      "@coldpbc/assets": ["./libs/react/src/assets/index.ts"],
      "@coldpbc/components": ["./libs/react/src/components/index.ts"],
      "@coldpbc/context": ["./libs/react/src/context/index.ts"],
      "@coldpbc/enums": ["./libs/react/src/enums/index.ts"],
      "@coldpbc/fetchers": ["./libs/react/src/fetchers/index.ts"],
      "@coldpbc/hooks": ["./libs/react/src/hooks/index.ts"],
      "@coldpbc/interfaces": ["./libs/react/src/interfaces/index.ts"],
      "@coldpbc/lib": ["./libs/react/src/lib/index.ts"],
      "@coldpbc/mocks": ["./libs/react/src/__mocks__/index.ts"],
      "@coldpbc/nest": ["./libs/nest/src"],
      "@coldpbc/providers": ["./libs/react/src/providers/index.ts"],
      "@coldpbc/routes": ["./libs/react/src/routes/index.ts"],
      "@coldpbc/styles": ["./libs/react/src/styles/index.ts"],
      "@coldpbc/themes": ["./libs/react/src/themes/index.ts"]
    }
  },
  "files": ["./node_modules/@nx/react/typings/cssmodule.d.ts", "./node_modules/@nx/react/typings/image.d.ts"],
  "exclude": ["node_modules", "tmp"]
}

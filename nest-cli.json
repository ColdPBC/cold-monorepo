{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "public/**/*"
    ],
    "deleteOutDir": true,
    "plugins": [{
      "name": "@nestjs/swagger",
        "options": {
          "setDefaults": true,
          "classValidatorShim": false,
          "introspectComments": true,
            "swaggerOptions": {
              "tagsSorter": "alpha"
            }
        }

    }]
  }
}
